<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Loja"
                   namespace="Loja.Entidades">

  <class name="Pessoa" table="Pessoas" abstract="true">
    <cache usage="nonstrict-read-write"/>
    <id name="Id" column="id" type="int">
      <generator class="identity" />
    </id>
    <property name="Nome" column="nome" />
    <property name="Idade" column="idade"/>
    <property name="Endereco" column="endereco"/>

    <!--HERANCA COM 3 TABELAS-->
    <joined-subclass name="PessoaFisica">
      <key column="PessoaId" />
      <property name="CPF" column="cpf" />
    </joined-subclass>

    <joined-subclass name="PessoaJuridica">
      <key column="PessoaId" />
      <property name="CNPJ" column="cnpj" />
    </joined-subclass>
    
  </class>

</hibernate-mapping>