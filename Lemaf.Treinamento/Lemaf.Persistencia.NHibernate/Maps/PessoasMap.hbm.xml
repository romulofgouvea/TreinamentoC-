<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Lemaf.Persistencia.NHibernate"
                   namespace="Lemaf.Persistencia.NHibernate.Maps">

  <class name="Pessoa" table="Pessoas">
    <id name="Id" column="id" type="int"> 
      <generator class="identity" />
    </id>
    <property name="Nome" column="nome" type="string"/>
    <property name="Idade" column="idade" type="int"/>
    <property name="Endereco" column="endereco" type="string"/>
  </class>

</hibernate-mapping>